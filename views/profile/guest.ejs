<h1> <%= userProfile.username %> </h1>
<!-- this page would allow a user to view someone's page but not allow them to edit pics -->



<div class="row">
    <div class="col s4">
            <img 
            src="<%= userProfile.pic %>" 
            class="materialboxed" 
            width="650" 
            alt="profile pic" 
            style="height: auto; width: 650px;" >
        </a>
</div>
    <div style="float: right;">
        <div class="row" >
            <div class="col ss6 offset-s4">
                <div class="card-panel blue-grey">
                <li class="white-text">BIO </li>
                <li class="white-text"> <%= userProfile.bio %></li>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <% userProfile.posts.forEach(p => { %>
        <div class="col s4">
            <ul>
                <li >
                    <img src="<%= p.picPost %>" class="materialboxed" width="650" style="width: 350px; height: auto">
                    <p><%= p.caption %> </p>
                </li>
            </ul>
        </div>
    <% }) %>
</div>


<script>
    document.addEventListener('DOMContentLoaded', function() {
    var elems = document.querySelectorAll('.materialboxed');
    var instances = M.Materialbox.init(elems, []);
    elems.addEventListener('click', elems.open())
  });
</script>